<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- 没有焦点时的背景图片 -->
  <item android:state_window_focused="false" >
    <shape >
      <!-- 圆角 -->
      <corners
          android:radius="10dp"/>
      <!-- 设置圆角半径 -->
      <!-- 填充 -->
      <solid
          android:color="@color/pink"/>
      <!-- 填充的颜色 -->

      <!-- 描边 -->
      <stroke
          android:width="1px"
          android:color="@color/blanchedalmond"/>
      <!-- 边距 -->
      <padding
       android:bottom="4dp"
       android:left="10dp"
       android:right="10dp"
       android:top="4dp" />
    </shape>
  </item>
  <!-- 非触摸模式下获得焦点并单击时的背景图片 -->
  <item android:state_focused="true" android:state_pressed="true">
    <shape  >
      <!-- 圆角 -->
      <corners
          android:radius="10dp"/>
      <!-- 填充 -->
      <solid
           android:color="@color/pink"/>
      <!-- 填充的颜色 -->
      <!-- 描边 -->
      <stroke
          android:width="1px"
        android:color="@color/mistyrose"/>
      <!-- 边距 -->
      <padding
       android:bottom="4dp"
       android:left="10dp"
       android:right="10dp"
       android:top="4dp" />
    </shape>
  </item>
  <!-- 触摸模式下单击时的背景图片-->
  <item android:state_focused="false" android:state_pressed="true">
    <shape  >
      <!-- 圆角 -->
      <corners
          android:radius="10dp"/>
      <!-- 填充 -->
      <solid
          android:color="@color/lightpink"/>
      <!-- 填充的颜色 -->
      <!-- 描边 -->
      <stroke
          android:width="1px"
          android:color="@color/mistyrose"/>
      <!-- 边距 -->
      <padding
       android:bottom="4dp"
       android:left="10dp"
       android:right="10dp"
       android:top="4dp" />
    </shape>
  </item>
  <!--选中时的图片背景-->
  <item android:state_selected="true">
    <shape >
      <!-- 圆角 -->
      <corners
          android:radius="10dp"/>
      <!-- 填充 -->
      <solid
          android:color="@color/lightpink"/>
      <!-- 填充的颜色 -->
      <!-- 描边 -->
      <stroke
          android:width="1px"
          android:color="@color/mistyrose"/>
      <!-- 边距 -->
      <padding
       android:bottom="4dp"
       android:left="10dp"
       android:right="10dp"
       android:top="4dp" />
    </shape>
  </item>
  <!--获得焦点时的图片背景-->
  <item android:state_focused="true">
    <shape >
      <!-- 圆角 -->
      <corners
          android:radius="10dp"/>
      <!-- 填充 -->
      <solid
          android:color="@color/lightpink"/>
      <!-- 填充的颜色 -->
      <!-- 描边 -->
      <stroke
          android:width="1px"
          android:color="@color/mistyrose"/>
      <!-- 边距 -->
      <padding
       android:bottom="4dp"
       android:left="10dp"
       android:right="10dp"
       android:top="4dp" />
    </shape>
  </item>
</selector>
