<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <!-- 实心 -->
            <gradient android:endColor="@color/lightcyan" android:startColor="@color/lightcyan" />
            <!-- 边框 -->
            <stroke android:width="1dp" android:color="@color/skyblue" />
            <!-- 圆角 -->
            <corners android:radius="2dp" />
            <!-- 边距 -->
            <padding android:bottom="9dp" android:left="20dp" android:right="20dp" android:top="9dp"/>
        </shape>
    </item>
    <item android:state_selected="false">
        <shape>
            <!-- 实心 -->
            <gradient android:endColor="@color/azure" android:startColor="@color/azure" />
            <!-- 边框 -->
            <stroke android:width="1dp" android:color="@color/skyblue" />
            <!-- 圆角 -->
            <corners android:radius="2dp" />
            <!-- 边距 -->
            <padding android:bottom="9dp" android:left="20dp" android:right="20dp" android:top="9dp"/>
        </shape>
    </item>
</selector>