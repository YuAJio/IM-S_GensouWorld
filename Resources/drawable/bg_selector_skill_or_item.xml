<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- 实心 -->
            <gradient android:angle="180" android:endColor="@color/beige" android:startColor="@color/beige" />
            <!-- 边框 -->
            <stroke android:width="1dp" android:color="@color/skyblue" />
            <!-- 圆角 -->
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- 实心 -->
            <gradient android:angle="180" android:endColor="@color/white" android:startColor="@color/white" />
            <!-- 边框 -->
            <stroke android:width="1dp" android:color="@color/skyblue" />
            <!-- 圆角 -->
            <corners android:radius="2dp" />
        </shape>
    </item>
</selector>