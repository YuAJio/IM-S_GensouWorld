<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- 没有焦点时的背景图片 -->
  <item android:state_window_focused="false">
    <shape>
      <!-- 圆角 -->
      <corners android:radius="5dp" />
      <!-- 填充 -->
      <gradient
          android:angle="90.0"
          android:centerColor="#86733D"
          android:endColor="#FCDE8A"
          android:centerX="0.5"
          android:startColor="#FCDE8A" />
      <!-- 描边 -->
      <stroke android:width="10px" android:color="@color/burlywood" />
    </shape>
  </item>
  <!-- 非触摸模式下获得焦点并单击时的背景图片 -->
  <item android:state_focused="true" android:state_pressed="true">
    <shape>
      <!-- 圆角 -->
      <corners android:radius="5dp" />
      <!-- 填充 -->
      <gradient
          android:angle="90.0"
          android:centerColor="#9A8751"
          android:centerY="0.45"
          android:endColor="#FFF29E"
          android:startColor="#FFF29E" />
      <!-- 描边 -->
      <stroke android:width="1px" android:color="@color/burlywood" />
    </shape>
  </item>
</selector>
