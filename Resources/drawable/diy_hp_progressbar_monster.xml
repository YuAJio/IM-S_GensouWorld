<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="3dp" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <stroke
                android:width="1.5dp"
                android:color="@color/darkgrey" />
            <solid android:color="@color/kuuhaku" />
        </shape>
    </item>
    <!--进度条-->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <padding
                    android:bottom="5dp"
                    android:left="1dp"
                    android:right="1dp"
                    android:top="5dp" />
                <gradient
                    android:angle="90.0"
                    android:centerColor="#F03E3A"
                    android:centerY="0.6"
                    android:endColor="#6E010A"
                    android:startColor="#731314" />
            </shape>
        </clip>
    </item>

