<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 实心 -->
    <gradient
        android:endColor="@color/ghostwhite_toast"
        android:startColor="@color/ghostwhite_toast" />
    <!-- 边框 -->
    <stroke
        android:width="1.1dp"
        android:color="@color/hotpink"
        android:dashGap="2dp"
        android:dashWidth="5dp" />
    <!-- 圆角 -->
    <corners android:radius="3dp" />
    <!-- 边距 -->
    <padding
        android:bottom="15dp"
        android:left="20dp"
        android:right="20dp"
        android:top="15dp" />
</shape>